<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/register_list_item_margin"
        android:layout_marginEnd="@dimen/register_list_item_end_margin"
        android:paddingBottom="@dimen/register_list_top_bottom_padding"
        tools:ignore="RtlSymmetry">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/event_date"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:drawableStart="@drawable/ic_arrow_downward"
            android:ellipsize="end"
            android:paddingStart="0dp"
            android:singleLine="true"
            android:text="@string/event_date"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/event_type"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.32"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="@string/form_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/sop"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.1"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="@string/sop"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/entity"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.2"
            android:maxLines="2"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="@string/hh_village_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/status"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="0.2"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/register_list_top_bottom_padding"
            android:text="@string/status"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/data_collection_date_header"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:drawableStart="@drawable/ic_arrow_downward"
            android:ellipsize="end"
            android:paddingStart="0dp"
            android:singleLine="true"
            android:text="@string/data_collection_date"
            android:textColor="@color/text_black"
            android:textSize="@dimen/event_register_list_title_size" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lighter_grey" />
</LinearLayout>